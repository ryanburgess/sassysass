#!/usr/bin/env node

var fs      = require('fs'),
  path      = require('path'),
  pkg       = require('../package.json'),
  version   = pkg.version,
  dir       = path.dirname(),
  name,
  filePath;

// get parameters passed through console
process.argv.forEach(function (val, index, array) {
  if(val.indexOf('name') > -1){
    name = val.split('=');
    name = name[1];
  }else if(val.indexOf('path') > -1){
    filePath = val.split('=');
    filePath = filePath[1];
  }
});

if(name === undefined){
  name = 'page';
}

if(filePath === undefined){
  filePath = 'sass';
}

// create page specific
fs.readFile(path.join(__dirname, '../page.scss'), 'utf8', function (err,data) {
  if (err) {
    return console.log(err);
    console.log('Directory path might be wrong');
  }
  var newFile = data.replace('@import "views/red";', '').replace('@import "modules/header";', '').replace('@import "modules/footer";', '');
  write(dir + '/'+ filePath + '/' + name + '.scss', newFile);
});

function write(path, str, mode) {
  fs.writeFileSync(path, str, { mode: mode || 0666 });
  console.log('   \x1b[36mcreate\x1b[0m : ' + path);
}


function mkdir(path, fn) {
  mkdirp(path, 0755, function(err){
    if (err) throw err;
    console.log('   \033[36mcreate\033[0m : ' + path);
    fn && fn();
  });
}
console.log('SassySass page ' + version);